{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "declaration": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true,
    "removeComments": true,
    "esModuleInterop": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitAny": false,
    "useUnknownInCatchVariables": true,
    "pretty": true,
    "target": "ESNext",
    "diagnostics": true,
  },
  "include": [ "src" ],
  "exclude": [ "node_modules", "demo", "test", "types" ]
}
