{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "declaration": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "importHelpers": true,
    "pretty": true,
    "target": "ESNext",
    "diagnostics": true,
    "useUnknownInCatchVariables": true
  },
  "include": [ "src" ],
  "exclude": [ "node_modules", "demo", "test", "types" ]
}
