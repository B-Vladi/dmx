{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "allowJs": true,
    "paths": {
      "#*": [ "./src/*" ]
    },
    "moduleResolution": "Node",
    "resolvePackageJsonExports": true,
    "baseUrl": ".",
  },
  "include": [
    "src/**/*",
    "types/**/*",
    "eslint.config.js"
  ],
  "exclude": [
    "node_modules",
    "./demo/**/*",
    "./test/**/*"
  ]
}
